<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:ignore="HardcodedText,NestedWeights">

    <TextView
            android:id="@+id/tv_curr_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="City"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="25sp">
    </TextView>

    <TextView
            android:id="@+id/tv_curr_country"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Country"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Latitude: "
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_curr_lat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Longitude: "
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_curr_long"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="center"/>

    </LinearLayout>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:contentDescription="Current weather image"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:src="@drawable/sun_image"/>

    <TextView
            android:id="@+id/tv_curr_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light rain"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="@dimen/text_temp_size"
            android:layout_marginBottom="50dp">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature:"
            android:textSize="@dimen/text_temp_size"
            android:layout_gravity="center">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp">

        <TextView
                android:id="@+id/tv_curr_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_unit"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (feels like "
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:id="@+id/tv_curr_feel_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_unit"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="@dimen/text_temp_size">
        </TextView>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure:"
            android:textSize="@dimen/text_temp_size"
            android:layout_gravity="center">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp">

        <TextView
                android:id="@+id/tv_curr_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="@dimen/text_temp_size">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" hPa"
                android:textSize="@dimen/text_temp_size">
        </TextView>

    </LinearLayout>

</LinearLayout>
